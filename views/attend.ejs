<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
     <!--Import Google Icon Font-->
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizified</title>
    <style>
        .section{
          padding-top: 4vw;
          padding-bottom: 4vw;
      
        }
        .question-box{
            padding: 30px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="nav-wrapper teal darken-2">
            <div class="container">
                <a href="#about" class="brand-logo">Quizified</a>
                <a href="#" class="sidenav-trigger" data-target="mobile-menu">
                    <i class="material-icons">menu</i>
                </a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="#Home" class="">Home</a></li>
                    <li><a href="#contact" class="">Contact</a></li>
                    <li><a href="#about" class="">About</a></li>
                </ul>
                <ul class="sidenav grey lighten-2" id="mobile-menu">
                    <li><a href="#Home">Home</a></li>
                    <li><a href="#contact">Contact</a></li>
                    <li><a href="#about">About</a></li>
                </ul>
            </div>
        </nav>
    </header><br><br>
    <div class="container">
        <form action="/quizComplete" method="POST">
        <%q_number = 1 %>
        <%score = 1%>
        <div class="input-field">
            name:<input type="text" id="student_name" name="student_name" value=<%=student_name%> >
        <label for="student_name"></label></div>
        <div class="input-field">
            email:<input type="text" id="email" name="email" value=<%=email%> >
        <label for="email"></label></div>
        <div class="input-field">
            quiz_id:<input type="text" id="quiz_id" name="quiz_id" value=<%=quiz_id%> >
        <label for="quiz_id"></label></div>
        <% for(let question of doc){%>
            <div class="col s12  grey lighten-5 z-depth-3">
            <p class="flow-text question-box"><%=q_number%>) <%= question.question%><br>
                <label>
                  <input type="checkbox" value="1" name="op1"/>
                  <span class="black-text"><%= question.op1%></span>
                </label><br>
                <label>
                    <input type="checkbox" value="2" name="op2"/>
                    <span class="black-text"><%= question.op2%></span>
                  </label><br>
                  <label>
                    <input type="checkbox"  value="3" name="op3"/>
                    <span class="black-text"><%= question.op3%></span>
                  </label><br>
                  <label>
                    <input type="checkbox"  value="4" name="op4"/>
                    <span class="black-text"><%= question.op4%></span>
                  </label><br>
            </p>
            </div>
            
            <%q_number += 1%>
        <%}%>
        <br>
        <div class="right-align">
        <button class="btn waves-effect waves-light" type="submit">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
        <input type="text" id='score' name="score" value="<%=score%>"/>
        </form>  
          <br><br>
        
    </div>

    

    <footer class="page-footer teal darken-2" id="about">
        <div class="container">
            <div class="row">
                <div class="col s12 l6">
                    <h5>About Us</h5>
                    <p class="grey-text text-lighten-3">Quizified helps you to conduct online quizes.</p>
                </div>
            </div>
            <div class="container right-align">&copy;2021 Quizified</div>
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script>
    //function myfun(value){if (value==question.op){score+=1}}
    document.getElementById("score").style.visibility = "hidden";
    $(document).ready(function(){
        $('.sidenav').sidenav();
        $('.scrollspy').scrollSpy();
    });

    </script>
</body>
</html>
